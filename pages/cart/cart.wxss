/* pages/cart/cart.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.list {
  padding-bottom: 181rpx;
}
.settle-ment {
  background-color: yellow;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.total-price {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  padding: 0 20rpx;
  color: #ccc;
}
.total-price .price {
  margin-left: 10rpx;
  color: #f60;
}
.button-group {
  height: 100rpx;
  display: flex;
}
.button-group view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.add {
  background-color: #febe1b;
}
.settle {
  background-color: #f60;
}
.list {
}
.list-item {
  width: 100%;
  margin-bottom: 20rpx;
  height: 200rpx;
  border-bottom: solid 2rpx #f60;
  padding: 20rpx 30rpx;
  position: relative;
}
.list-item-sku {
  padding-top: 10rpx;
  color: #ccc;
}
.list-item-price {
  padding-top: 10rpx;
  color: red;
}
.list-item-num {
  display: flex;
  position: absolute;
  right: 60rpx;
  top: 150rpx;
  justify-content: space-around;
  align-items: center;
  width: 250rpx;
  height: 80rpx;
}
.list-item-num input {
  border: solid 2rpx #ffa72b;
  width: 100rpx;
  text-align: center;
  border-radius: 25rpx;
}
.list-item-num .less {
  text-align: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: #ffa72b 2rpx solid;
}
.list-item-num .more {
  text-align: center;
  text-align: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #ffa72b;
}
.container1{
  /* width: 100%;
  height: 100%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container1 .text-img{
  width: 350rpx;
  height: 300rpx;
  margin: 50rpx 0;
}
.tips{
  margin-top: 200rpx;
  color: #ccc;
}
.btn-qcode{
  width: 400rpx;
  height: 100rpx;
  background-color: #ffb93d;
  color: #000;
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
}
