/* pages/success/success.wxss */
.continer{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
.continer .main{
  height: 50vh;
  display: flex;
  flex: 1;
  flex-direction: column;
  text-align: center;
  align-items: center;
  background-color:#f9f9f9 ;
}
.continer .main .img{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  margin-top: 100rpx;
}
.continer .main .img image{
  width: 100rpx;
  height: 100rpx;
  color: #16fa25;
  padding-bottom: 20rpx;
}
.continer .main .btn{
  width: 150rpx;
  height: 50rpx;
  background-color: #f5ba47;
  padding: 10rpx 20rpx;
  border-radius: 7rpx;
  color: #fff;
  margin-top: 50rpx;

}
.continer .buttom-shop {
  flex: 2;
  width: 100%;
  height: 50vh;
}
.continer .buttom-shop .title{
  margin-top: 30rpx;
  text-align: center;
  font-size: 36rpx;
  border-bottom: 2px solid #efefef;
  padding-bottom: 20rpx;
}
.continer .buttom-shop .gray{
  padding: 0rpx 20rpx;
}
.continer .buttom-shop .red{
  color: red;
}
.continer .buttom-shop .shop-item{
  padding: 20rpx 20rpx;
}
.continer .buttom-shop .shop-item image{
  width: 710rpx;
  height: 350rpx;
  
}
.continer .buttom-shop .shop-item text{
  display: block;
}
.continer .buttom-shop .shop-item .font-item :nth-child(1){
  color: #666;
}
.rmb{
  font-size: 36rpx;
  color: red;
}
.last-btn{
  display: flex;
  justify-content: space-between;

}
.last-btn .btn{
  width: 150rpx;
  height: 40rpx;
  background-color: red;
  color: #fff;
  text-align: center;
  padding: 10rpx;
  border-radius:8rpx;
}